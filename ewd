    <!-- Bootstrap JS -->
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'></script>

    <script>
        let currentPage = 'dashboard';

        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∫–∞–∑–∞ —Å—Ç—Ä–∞–Ω–∏—Ü
        function showPage(pageId) {
            // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.remove('active');
            });

            // –£–±–∏—Ä–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Å–æ –≤—Å–µ—Ö —Å—Å—ã–ª–æ–∫ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            document.querySelectorAll('.sidebar .nav-link').forEach(link => {
                link.classList.remove('active');
            });

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
            const targetPage = document.getElementById(pageId + '-page');
            if (targetPage) {
                targetPage.classList.add('active');
            }

            // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –∫ –Ω—É–∂–Ω–æ–π —Å—Å—ã–ª–∫–µ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            event.target.closest('.nav-link')?.classList.add('active');

            currentPage = pageId;

            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            switch(pageId) {
                case 'products-list':
                    loadProductsList();
                    break;
                case 'product-editor':
                    loadProductsForEditor();
                    break;
                case 'orders':
                    loadOrders();
                    break;
                case 'reviews':
                    loadReviews();
                    break;
            }

            console.log('–ü–µ—Ä–µ–∫–ª—é—á–∏–ª–∏—Å—å –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É:', pageId);
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –º–æ–¥—É–ª–µ–π –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ
        function showInDevelopment(moduleName) {
            alert(`–ú–æ–¥—É–ª—å "${moduleName}" –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ.\n\n–û–Ω –±—É–¥–µ—Ç –¥–æ—Å—Ç—É–ø–µ–Ω –≤ –±–ª–∏–∂–∞–π—à–∏—Ö –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è—Ö.`);
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–ø–∏—Å–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤
        function loadProductsList() {
            const container = document.getElementById('products-table-container');

            fetch('?action=get_products', {
                method: 'POST',
                headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                body: 'action=get_products'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    renderProductsTable(data.data);
                } else {
                    container.innerHTML = '<div class="alert alert-danger">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–æ–≤</div>';
                }
            })
            .catch(error => {
                console.error('–û—à–∏–±–∫–∞:', error);
                container.innerHTML = '<div class="alert alert-danger">–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è</div>';
            });
        }

        function renderProductsTable(products) {
            let html = `
                <div class='table-responsive'>
                    <table class='table table-hover'>
                        <thead class='table-dark'>
                            <tr>
                                <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                                <th>–¶–µ–Ω–∞</th>
                                <th>–°—Ç–∞—Ç—É—Å</th>
                                <th>–î–∞—Ç–∞ —Å–æ–∑–¥–∞–Ω–∏—è</th>
                                <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            if (products.length === 0) {
                html += `
                    <tr>
                        <td colspan='5' class='text-center py-4'>
                            <i class='fas fa-box-open fa-2x text-muted mb-2'></i>
                            <p class='text-muted'>–¢–æ–≤–∞—Ä—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã</p>
                            <button class='btn btn-primary' onclick="showPage('create-product')">
                                <i class='fas fa-plus me-1'></i>–°–æ–∑–¥–∞—Ç—å –ø–µ—Ä–≤—ã–π —Ç–æ–≤–∞—Ä
                            </button>
                        </td>
                    </tr>
                `;
            } else {
                products.forEach(product => {
                    html += `
                        <tr>
                            <td>
                                <strong>${escapeHtml(product.name || '–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è')}</strong>
                                ${product.ai_generated ? '<span class="badge bg-info ms-1">–ò–ò</span>' : ''}
                            </td>
                            <td>${formatPrice(product.price || 0)}</td>
                            <td>
                                <span class='badge ${(product.status == 1) ? 'bg-success' : 'bg-secondary'}'>
                                    ${(product.status == 1) ? '–ê–∫—Ç–∏–≤–µ–Ω' : '–ù–µ–∞–∫—Ç–∏–≤–µ–Ω'}
                                </span>
                            </td>
                            <td>${formatDate(product.created_at || new Date().toISOString())}</td>
                            <td>
                                <button class='btn btn-sm btn-outline-primary me-1' onclick="editProduct('${product.id}')">
                                    <i class='fas fa-edit'></i>
                                </button>
                                <button class='btn btn-sm btn-outline-danger' onclick="deleteProduct('${product.id}')">
                                    <i class='fas fa-trash'></i>
                                </button>
                            </td>
                        </tr>
                    `;
                });
            }

            html += '</tbody></table></div>';
            document.getElementById('products-table-container').innerHTML = html;
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞
        function loadProductsForEditor() {
            fetch('?action=get_products', {
                method: 'POST',
                headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                body: 'action=get_products'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const select = document.getElementById('product-select');
                    select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ —Ç–æ–≤–∞—Ä –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è</option>';

                    data.data.forEach(product => {
                        const option = document.createElement('option');
                        option.value = product.id;
                        option.textContent = product.name || '–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è';
                        select.appendChild(option);
                    });
                }
            })
            .catch(error => console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–æ–≤ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞:', error));
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞ —Ç–æ–≤–∞—Ä–∞
        function loadProductEditor() {
            const productId = document.getElementById('product-select').value;
            const container = document.getElementById('product-editor-frame-container');

            if (!productId) {
                container.innerHTML = `
                    <div class='text-center p-5 bg-light rounded'>
                        <i class='fas fa-edit fa-3x text-muted mb-3'></i>
                        <p class='text-muted'>–í—ã–±–µ—Ä–∏—Ç–µ —Ç–æ–≤–∞—Ä –∏–∑ —Å–ø–∏—Å–∫–∞ –≤—ã—à–µ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = `<iframe src='product_editor.php?id=${productId}' class='module-frame'></iframe>`;
        }

        // –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
        function editProduct(id) {
            document.getElementById('product-select').value = id;
            loadProductEditor();
            showPage('product-editor');
        }

        // –£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
        function deleteProduct(id) {
            if (!confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä?')) {
                return;
            }

            fetch('', {
                method: 'POST',
                headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                body: `action=delete_product&id=${id}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    loadProductsList();
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('–û—à–∏–±–∫–∞:', error);
                showNotification('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞', 'error');
            });
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∑–∞–∫–∞–∑–æ–≤
        function loadOrders() {
            const container = document.getElementById('orders-table-container');

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º, —á—Ç–æ –∑–∞–∫–∞–∑—ã –ø–æ–∫–∞ –≤ –ø—Ä–æ—Å—Ç–æ–º –≤–∏–¥–µ
            container.innerHTML = `
                <div class='alert alert-info'>
                    <i class='fas fa-info-circle me-2'></i>
                    –ú–æ–¥—É–ª—å –∑–∞–∫–∞–∑–æ–≤ –±—É–¥–µ—Ç —Ä–∞—Å—à–∏—Ä–µ–Ω –≤ —Å–ª–µ–¥—É—é—â–µ–º –æ–±–Ω–æ–≤–ª–µ–Ω–∏–∏.
                    –°–µ–π—á–∞—Å –¥–æ—Å—Ç—É–ø–Ω—ã –±–∞–∑–æ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –≤ —Ä–∞–∑–¥–µ–ª–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏.
                </div>
            `;
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –æ—Ç–∑—ã–≤–æ–≤
        function loadReviews() {
            const container = document.getElementById('reviews-table-container');

            container.innerHTML = `
                <div class='alert alert-info'>
                    <i class='fas fa-info-circle me-2'></i>
                    –ú–æ–¥—É–ª—å –æ—Ç–∑—ã–≤–æ–≤ –±—É–¥–µ—Ç —Ä–∞—Å—à–∏—Ä–µ–Ω –≤ —Å–ª–µ–¥—É—é—â–µ–º –æ–±–Ω–æ–≤–ª–µ–Ω–∏–∏.
                    –ë–∞–∑–æ–≤–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –¥–æ—Å—Ç—É–ø–Ω–∞ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ.
                </div>
            `;
        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function formatPrice(price) {
            return new Intl.NumberFormat('ru-RU', {
                style: 'currency',
                currency: 'RUB',
                minimumFractionDigits: 0
            }).format(price || 0);
        }

        function formatDate(dateString) {
            if (!dateString) return '–ù–µ —É–∫–∞–∑–∞–Ω–æ';
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU') + ' ' + date.toLocaleTimeString('ru-RU', {hour: '2-digit', minute: '2-digit'});
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text || '';
            return div.innerHTML;
        }

        // –°–∏—Å—Ç–µ–º–∞ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
        function showNotification(message, type = 'info', duration = 4000) {
            const alertTypes = {
                'success': 'alert-success',
                'error': 'alert-danger',
                'warning': 'alert-warning',
                'info': 'alert-info'
            };

            const icons = {
                'success': 'fa-check-circle',
                'error': 'fa-exclamation-circle',
                'warning': 'fa-exclamation-triangle',
                'info': 'fa-info-circle'
            };

            const notification = document.createElement('div');
            notification.className = `alert ${alertTypes[type]} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; border-radius: 10px; box-shadow: 0 10px 25px rgba(0,0,0,0.15);';
            notification.innerHTML = `
                <i class='fas ${icons[type]} me-2'></i>
                ${message}
                <button type='button' class='btn-close' onclick='this.parentElement.remove()'></button>
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.classList.remove('show');
                    setTimeout(() => notification.remove(), 300);
                }
            }, duration);
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ –ê–∫–≤–∞–ê–¥–º–∏–Ω –ú–ï–ì–ê —Å–∏—Å—Ç–µ–º–∞ –∑–∞–≥—Ä—É–∂–µ–Ω–∞');

            // –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            setTimeout(() => {
                showNotification('üöÄ –°–∏—Å—Ç–µ–º–∞ –≥–æ—Ç–æ–≤–∞ –∫ —Ä–∞–±–æ—Ç–µ! –í—Å–µ –º–æ–¥—É–ª–∏ –ø–æ–¥–∫–ª—é—á–µ–Ω—ã.', 'success');
            }, 1000);

            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤ –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –¥–æ—Å—Ç—É–ø–∞
            loadProductsForEditor();
        });
    </script>

