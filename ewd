<?php
/**
 * –ì–õ–ê–í–ù–ê–Ø –ê–î–ú–ò–ù–ö–ê - –ò–ù–¢–ï–ì–†–ò–†–û–í–ê–ù–ù–ê–Ø –°–ò–°–¢–ï–ú–ê
 * –ü–æ–¥–∫–ª—é—á–∞–µ—Ç –≤—Å–µ —Ç–≤–æ–∏ –≥–æ—Ç–æ–≤—ã–µ –º–æ–¥—É–ª–∏ –≤ –µ–¥–∏–Ω–æ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–µ
 */

require_once '../functions.php';
initSession();

// –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ç–µ–∫—É—â—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
$page = $_GET['page'] ?? 'dashboard';

// –û–±—Ä–∞–±–æ—Ç–∫–∞ AJAX –∑–∞–ø—Ä–æ—Å–æ–≤
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            case 'delete_product':
                $id = $_POST['id'] ?? 0;
                $result = deleteProduct($id);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? '–¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω' : '–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞'
                ]);
                break;

            case 'update_order_status':
                $id = $_POST['id'] ?? 0;
                $status = trim($_POST['status'] ?? '');
                $result = updateOrderStatus($id, $status);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? '–°—Ç–∞—Ç—É—Å –∑–∞–∫–∞–∑–∞ –æ–±–Ω–æ–≤–ª–µ–Ω' : '–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç—É—Å–∞'
                ]);
                break;

            case 'delete_category':
                $id = $_POST['id'] ?? 0;
                $result = deleteCategory($id);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? '–ö–∞—Ç–µ–≥–æ—Ä–∏—è —É–¥–∞–ª–µ–Ω–∞' : '–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –∫–∞—Ç–µ–≥–æ—Ä–∏–∏'
                ]);
                break;

            case 'get_dashboard_data':
                echo json_encode([
                    'success' => true,
                    'data' => getDashboardStats()
                ]);
                break;

            default:
                echo json_encode(['success' => false, 'message' => '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ –¥–µ–π—Å—Ç–≤–∏–µ']);
                break;
        }
    } catch (Exception $e) {
        error_log('–û—à–∏–±–∫–∞ –≤ –∞–¥–º–∏–Ω –ø–∞–Ω–µ–ª–∏: ' . $e->getMessage());
        echo json_encode(['success' => false, 'message' => '–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞']);
    }
    exit;
}

// –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã—Ö –º–æ–¥—É–ª–µ–π
switch ($page) {
    case 'products':
    case 'product_create':
    case 'product_edit':
    case 'product_view':
        // –ü–æ–¥–∫–ª—é—á–∞–µ–º —Ç–≤–æ–π add_product.php –∫–∞–∫ —Å–æ–∑–¥–∞—Ç–µ–ª—å
        if ($page === 'product_create') {
            include 'add_product.php';
            exit;
        }
        // –ü–æ–¥–∫–ª—é—á–∞–µ–º —Ç–≤–æ–π product_editor.php –∫–∞–∫ —Ä–µ–¥–∞–∫—Ç–æ—Ä  
        if ($page === 'product_edit') {
            include 'product_editor.php';
            exit;
        }
        // –û—Å—Ç–∞–ª—å–Ω–æ–µ - —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤
        break;

    case 'news':
        if (file_exists('news_mega_system.php')) {
            include 'news_mega_system.php';
            exit;
        }
        break;

    case 'slider':
        if (file_exists('upload_images.php')) {
            include 'upload_images.php';
            exit;
        }
        break;
}

// –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –¥–ª—è –¥–∞—à–±–æ—Ä–¥–∞
$stats = getDashboardStats();
$recentProducts = array_slice(getProducts(), -5);
$recentOrders = array_slice(getOrders(), -5);
$pendingReviews = array_filter(getAllReviews(), function($review) {
    return ($review['status'] ?? '') === 'pending';
});

