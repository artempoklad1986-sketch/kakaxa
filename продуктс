<?php
session_start();
require_once 'functions.php';

// Обработка AJAX запросов (дублируем логику корзины)
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            case 'add_to_cart':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 1);

                if (!empty($productId) && $quantity > 0) {
                    $result = addToCart($productId, $quantity);

                    if ($result) {
                        echo json_encode([
                            'success' => true,
                            'cartCount' => getCartCount(),
                            'message' => 'Товар добавлен в корзину!'
                        ]);
                    } else {
                        echo json_encode([
                            'success' => false,
                            'message' => 'Не удалось добавить товар в корзину'
                        ]);
                    }
                } else {
                    echo json_encode(['success' => false, 'message' => 'Некорректные параметры товара']);
                }
                break;

            case 'add_to_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = addToFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? 'Товар добавлен в избранное' : 'Товар уже в избранном',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => 'Некорректный ID товара']);
                }
                break;

            case 'remove_from_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = removeFromFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? 'Товар удален из избранного' : 'Ошибка удаления из избранного',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => 'Некорректный ID товара']);
                }
                break;
        }
    } catch (Exception $e) {
        echo json_encode(['success' => false, 'message' => 'Внутренняя ошибка сервера: ' . $e->getMessage()]);
    }
    exit;
}

// Обработка GET запросов
if (isset($_GET['action']) && $_GET['action'] === 'get_product') {
    header('Content-Type: application/json; charset=utf-8');
    $id = $_GET['id'] ?? '';
    $product = getProductById($id);
    if ($product) {
        echo json_encode($product);
    } else {
        echo json_encode(['error' => 'Товар не найден']);
    }
    exit;
}

try {
    // Получение фильтров
    $categoryFilter = (int)($_GET['category'] ?? 0);
    $searchFilter = trim($_GET['search'] ?? '');
    $priceMin = (int)($_GET['price_min'] ?? 0);
    $priceMax = (int)($_GET['price_max'] ?? 0);

    $filters = [];
    if ($categoryFilter > 0) $filters['category_id'] = $categoryFilter;
    if (!empty($searchFilter)) $filters['search'] = $searchFilter;
    if ($priceMin > 0) $filters['price_min'] = $priceMin;
    if ($priceMax > 0) $filters['price_max'] = $priceMax;

    $products = getProducts($filters);
    $categories = getCategoriesWithCount();
    $cartCount = getCartCount();
    $favoritesCount = getFavoritesCount();
} catch (Exception $e) {
    error_log('Ошибка в products.php: ' . $e->getMessage());
    $products = [];
    $categories = [];
    $cartCount = 0;
    $favoritesCount = 0;
}
?>
