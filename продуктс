    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'></script>
    <script>
        console.log('🛍️ МЕГА Каталог товаров загружен!');

        let currentProductId = null;

        // МЕГА функция добавления в корзину
        async function addToCart(productId, quantity = 1) {
            console.log('🛒 Добавление в корзину:', productId);

            try {
                const formData = new FormData();
                formData.append('action', 'add_to_cart');
                formData.append('product_id', productId);
                formData.append('quantity', quantity);

                const response = await fetch('products.php', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });

                const result = await response.json();

                if (result.success) {
                    updateCartBadge(result.cartCount);
                    showNotification('✅ ' + result.message, 'success');
                } else {
                    showNotification('❌ ' + (result.message || 'Ошибка добавления в корзину'), 'error');
                }

            } catch (error) {
                console.error('Ошибка добавления в корзину:', error);
                showNotification('💥 Ошибка сети: ' + error.message, 'error');
            }
        }

        // Избранное
        async function toggleFavorite(productId, button) {
            const isActive = button.classList.contains('active');
            const action = isActive ? 'remove_from_favorites' : 'add_to_favorites';

            try {
                const formData = new FormData();
                formData.append('action', action);
                formData.append('product_id', productId);

                const response = await fetch('products.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    button.classList.toggle('active');
                    button.title = isActive ? 'Добавить в избранное' : 'Удалить из избранного';
                    updateFavoritesBadge(result.favoritesCount);
                    showNotification('💝 ' + result.message, 'success');
                } else {
                    showNotification('❌ ' + result.message, 'error');
                }
            } catch (error) {
                console.error('Ошибка избранного:', error);
                showNotification('💥 Ошибка сети', 'error');
            }
        }

        // Показать товар
        async function showProductModal(productId) {
            try {
                const response = await fetch(`products.php?action=get_product&id=${productId}`);
                const product = await response.json();

                if (product.error) {
                    showNotification('❌ Товар не найден', 'error');
                    return;
                }

                currentProductId = productId;

                document.getElementById('productModalTitle').textContent = product.name || 'Товар';
                document.getElementById('productModalName').textContent = product.name || 'Товар';
                document.getElementById('productModalPrice').textContent = formatPrice(product.price || 0);
                document.getElementById('productModalDescription').textContent = product.description || 'Описание отсутствует';

                const modal = new bootstrap.Modal(document.getElementById('productModal'));
                modal.show();

            } catch (error) {
                console.error('Ошибка загрузки товара:', error);
                showNotification('💥 Ошибка загрузки товара', 'error');
            }
        }

        function addToCartFromModal() {
            if (currentProductId) {
                addToCart(currentProductId);
            }
        }

        function toggleFavoriteFromModal() {
            if (currentProductId) {
                const button = document.getElementById('favoriteModalBtn');
                toggleFavorite(currentProductId, button);
            }
        }

        // Обновить счетчики
        function updateCartBadge(count) {
            const badge = document.getElementById('cartCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline' : 'none';
            }
        }

        function updateFavoritesBadge(count) {
            const badge = document.getElementById('favoritesCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline' : 'none';
            }
        }

        // Уведомления
        function showNotification(message, type = 'success') {
            const toastContainer = document.querySelector('.toast-container');
            const alertClass = type === 'success' ? 'alert-success' : (type === 'info' ? 'alert-info' : 'alert-danger');

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show`;
            notification.style.cssText = 'min-width: 300px; box-shadow: 0 4px 15px rgba(0,0,0,0.2);';
            notification.innerHTML = `
                ${message}
                <button type='button' class='btn-close' data-bs-dismiss='alert'></button>
            `;

            toastContainer.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        function formatPrice(price) {
            const numPrice = parseFloat(price) || 0;
            return new Intl.NumberFormat('ru-RU', {
                style: 'currency',
                currency: 'RUB',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(numPrice);
        }

        // Инициализация
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 МЕГА Каталог готов к работе!');
            console.log(`📦 Товаров на странице: <?= count($products) ?>`);
        });
    </script>
</body>
</html>
